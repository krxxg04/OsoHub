<style>
	footer {
		padding: 4em 2em 2em;
		color: rgb(var(--gray));
		text-align: center;
		font-size: 0.9rem;
		display: flex;
		flex-direction: column;
		align-items: center;
		gap: 1.5em;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 1.5em;
		margin-bottom: 1em;
	}
	.social-links a {
		color: rgb(var(--gray));
		transition: color 0.3s ease, transform 0.3s ease;
	}
	.social-links a:hover {
		color: white;
		transform: scale(1.1);
	}
	footer p {
		margin: 0;
		opacity: 0.8;
	}
</style>